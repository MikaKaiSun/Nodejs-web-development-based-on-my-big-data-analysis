    #modal2
      #progressbar
        ul
          li
            i.icon.fa.fa-calendar
            h5 1.选择日期
            button.datepicker(name='date', data-value='2015/07/1') 选择
            #selectedDate
          li
            i.icon.fa.fa-pie-chart
            h5 2.选择图表
            select#chart-kind
              option(value='pie') 饼图
              option(value='bar') 柱状图
          li
            i.icon.fa.fa-check
            h5 3.生成 !
            button.generate 生成
      
      #chart-wrap
        i.fa.fa-angle-left(aria-hidden='true')
        h2
        canvas(id='chart', width='400', height='335')
      
      #loading
        i.fa.fa-spinner.fa-pulse.fa-3x.fa-fw
    
    script(src='/javascripts/map-hotpoint.js')
