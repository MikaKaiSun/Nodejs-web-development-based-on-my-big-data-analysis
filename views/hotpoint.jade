    div.btnMenu
      svg(xmlns='http://www.w3.org/2000/svg', width='50', height='50', viewbox='0 0 50 50')
        path(d='M25,3C12.869,3,3,12.869,3,25s9.869,22,22,22s22-9.869,22-22S37.131,3,25,3z M36,26H26v10h-2V26H14v-2h10V14h2v10h10V26z')
    #map-hotpoint
    #modal
      svg#loading-icon(version='1.1', xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', x='0px', y='0px', width='48px', height='48px', viewbox='0 0 48 48', enable-background='new 0 0 48 48', xml:space='preserve')
        ellipse#ell(fill='#90CAF9', cx='24', cy='35.5', rx='18', ry='6.5')
